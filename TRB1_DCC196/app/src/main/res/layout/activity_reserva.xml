<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.marit.trb1_dcc196.ActivityReserva">

    <Button
        android:id="@+id/btnMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="156dp"
        android:layout_marginTop="8dp"
        android:text="Voltar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lstUsuarios" />

    <ListView
        android:id="@+id/lstLivro"
        android:layout_width="358dp"
        android:layout_height="187dp"
        tools:layout_editor_absoluteX="17dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="27dp" />

    <ListView
        android:id="@+id/lstUsuarios"
        android:layout_width="355dp"
        android:layout_height="211dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/lstLivro"
        tools:layout_editor_absoluteX="15dp" />
</android.support.constraint.ConstraintLayout>
