<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.marit.trb1_dcc196.Main">

    <ListView
        android:id="@+id/lstLivros"
        android:layout_width="368dp"
        android:layout_height="341dp"
        tools:layout_editor_absoluteX="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btnCadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="35dp"
        android:text="UsuÃ¡rio"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lstLivros" />

    <Button
        android:id="@+id/btnVoltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reserva"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/lstLivros"
        app:layout_constraintLeft_toRightOf="@+id/btnCadastro"
        android:layout_marginLeft="44dp" />

    <Button
        android:id="@+id/btnLivro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Livros"
        app:layout_constraintLeft_toRightOf="@+id/btnVoltar"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/lstLivros" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="44dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCadastro" />

    <Button
        android:id="@+id/btnListaLivros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="Listagem de Livros"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCadastro" />

</android.support.constraint.ConstraintLayout>
