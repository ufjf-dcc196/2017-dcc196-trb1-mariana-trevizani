<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.marit.dcc196_trb1.ActivityAuxiliar2">

    <Button
        android:id="@+id/btnListagemPessoa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="148dp"
        android:layout_marginTop="172dp"
        android:text="Atualiza Lista"
        app:layout_constraintTop_toBottomOf="@+id/lstLivro"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="33dp"
        app:layout_constraintTop_toBottomOf="@+id/lstLivro"
        app:layout_constraintLeft_toRightOf="@+id/textView3"
        android:layout_marginLeft="55dp" />

    <ListView
        android:id="@+id/lstLivro"
        android:layout_width="358dp"
        android:layout_height="187dp"
        tools:layout_editor_absoluteX="17dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="27dp" />

    <Button
        android:id="@+id/btnLivro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="71dp"
        android:layout_marginTop="172dp"
        android:text="Associar Livro"
        app:layout_constraintLeft_toRightOf="@+id/btnListagemPessoa"
        app:layout_constraintTop_toBottomOf="@+id/lstLivro" />

    <Button
        android:id="@+id/btnVoltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="Voltar"
        app:layout_constraintTop_toBottomOf="@+id/btnLivro"
        android:layout_marginLeft="148dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:text="Hora da Entrada"
        app:layout_constraintTop_toBottomOf="@+id/lstLivro"
        android:layout_marginLeft="36dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="32dp"
        android:text="Hora da Saida"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/txtSaida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="47dp"
        android:layout_marginTop="32dp"
        android:text="TextView"
        app:layout_constraintLeft_toRightOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/txt" />

</android.support.constraint.ConstraintLayout>
